<div class="user_profile">
		<h1>Edit Crowdfunder User Profile</h1>

		<%= form_for @user,  html: { multipart: true } do |f| %>
		
	<div class="form_field">
		<%= f.label :first_name %>
		<%= f.text_field :first_name %>
	</div>
		<div class="form_field">
		<%= f.label :last_name %>
		<%= f.text_field :last_name %>
	</div>
	<div class="form_field">
		<%= f.label :email %>
		<%= f.text_field :email %>
	</div>

	<div class="form_field">
		<%= f.label :bio %>
		<%= f.text_area :bio %>
	</div>
	
	<div class="form_field">
		<%= f.label :avatar %>
		<%= f.file_field :avatar%>
	</div>


	<div class="form_submit"><%= f.submit %></div>
<% end %>
	
</div>



