<div class="row">
	<h1>Edit Crowdfunder User Profile</h1>

	<div class="large-6 medium-6 small-12 columns">
		

		<%= form_for @user,  html: { multipart: true } do |f| %>
		
			<%= f.label :first_name %>
			<%= f.text_field :first_name %>

			<%= f.label :last_name %>
			<%= f.text_field :last_name %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :bio %>
			<%= f.text_area :bio %>
		
			<%= f.label :avatar %>
			<%= f.file_field :avatar%>

			<%= f.submit "Save Changes", class: "button small" %>
		<% end %>
	</div>
</div>



