		<h1>User Profile</h1>

<div class="row">
	<div class="large-4 columns">
		<%= image_tag @user.avatar.url(:medium) %>
	</div>
	<div class="large-4 columns">
		<%= @user.first_name %> <%= @user.last_name %> <br>
		<%= @user.email %> 
	<br>
		Total Contributions: <%= @user.user_total_contributions %> 

	</div>

	<div class="large-4 columns">
		
	<%= link_to "create project", new_project_path, class: "button" %>
	<%= link_to "Edit My Information", edit_user_path(@user), class: "button" %>

	</div>
</div>
<div class="row">
		<div class="large-6 columns hello">
			<h2>My Contributions</h2>

			<% @user.contributions.each do |contribution| %>

				<% project = Project.where(:id => contribution.project_id) %>
					<% project.each do |proj| %>
					<%= proj.title %>
				<% end %>
			
				<%= contribution.amount_in_dollars %> 
				<%= contribution.id %> <br>
			<% end %>

		</div>

		<div class="large-6 columns">
			&nbsp
		</div>
</div>





