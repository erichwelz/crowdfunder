<h1>Dashboard</h1>
<hr>
<div class="row">
	<div class="large-4 medium-4 small-12columns">
		<%= image_tag @user.avatar.url(:medium) %>
	</div>
	<div class="large-4 medium-4 small-12 columns">
	 <h1 id="users-name"><%= @user.first_name %> <%= @user.last_name %></h1>
		<%= @user.email %> <br>
		<%= @user.bio %>
	<br>
		

	</div>

	<div class="large-4 medium-4 small-12columns">

		<% if current_user.id == @user.id %>
			<%= link_to "create project", new_project_path, class: "button round" %>
			<%= link_to "Edit My Information", edit_user_path(@user), class: "button round" %>
		<% end %>



	<div class="panel left">
	Total Contributions: <br>
	<h3>$<%= number_with_delimiter(@user.user_total_contributions, :delimiter => ',') %></h3> 
	</div>

	</div>
</div>
<hr>
<div class="row">

	<div class="large-6 medium-6 small-12 columns">
		<h2>My Contributions</h2>
		<% x = 1 %>

		<table class="my-contributions">	
		<thead> <td></td> <td>Project</td> <td>contribution</td> </thead>
		
			<% @user.contributions.each do |contribution| %>
				<% project = Project.where(:id => contribution.project_id) %>
				<% project.each do |proj| %>
					<tr>
						<td><%= x %></td>
						<td><%= proj.title %></td>
				<% end %>
						<td> $<%= contribution.amount_in_dollars %> </td> 
					</tr>
				<% x+=1 %>
			<% end %>
		</table>
	</div>
			
	<div class="large-6 medium-6 small-12 columns">
	<h2>My Projects</h2>
	<h4>Active Projects</h4>

		<table class="active-projects">
			<thead> <td>Project</td> <td> % </td> <td> End Date</td> </thead>
			<% @user.projects.each do |project| %>
				<% if project.public_date < Date.today %>
				<tr>
					<td> <%= project.title %> </td>
					<td> <%= project.percentage_of_goal %>% </td>
					<td> <%= project.finish_date.strftime('%b. %e, %Y') %> </td>
				</tr>
					
					<% end %>
				<% end %>
		</table>

	<h4>Future Projects </h4>

	<table class="future-projects">
	<thead> <td>Project</td> <td> Start Date </td> <td> Goal</td> </thead>
		<% @user.projects.each do |project| %>
			<% if project.public_date > Date.today %>
				<tr>
					<td><%= project.title %></td> 
					<td><%= project.public_date.strftime('%b. %e, %Y') %></td>
					<td>$<%= project.goal_in_dollars %></td>
				</tr>
			<% end %>
		<% end %>
	</table>
</div>
</div>
<hr>





