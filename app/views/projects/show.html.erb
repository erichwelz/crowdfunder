<div class="row"><h1><%= @project.title %></h1>

	<div class="large-6  left medium-6 small-12 columns"> 
    <h5><%= @project.category.category_name %></h5>
		<p><%= @project.description %> </p> 

			<div class="dates">
		<h6>Start:</h6> <h4><%= @project.start_date.strftime('%b. %e, %Y') %></h4>
		</div>
		<div class="dates">
		<h6>End:</h6> <h4><%= @project.finish_date.strftime('%b. %e, %Y') %></h4>
		</div>

	</div> <!-- end 5 -->

	<div class="large-6 medium-6 small-12 columns">
		<div class="row">
		<div class="project-stats panel">
		 <h6>Goal:</h6> <h2>$<%= @project.goal_in_dollars %></h2>
		</div>
		<div class="project-stats panel">
		<h6>To Date:</h6> <h2>$<%= @project.total_contributions %></h2>
		</div>

		</div>

		<div class="row">
		<div class="percentage panel">
		<%= @project.percentage_of_goal %>%
		</div>
		</div>
		
		<div class="row owners-info">
			<h5>Project Owner</h5>
 				<%= @owner.first_name %>  <%= @owner.last_name %> 
				<%= image_tag @owner.avatar.url(:thumb) %>

		</div>


	</div>
</div>  <!-- end row -->




<div class="row forming">

	<div class="large-6 medium-6 small-6 hello">
		




	</div>


	<div class="large-6 medium-6 small-6 goodbye">

<%= form_for ([@project, @contribution])   do |f| %>
<% if @contribution.errors.any? %>
	<div id="error_explanation">
		<h2><%= pluralize(@contribution.errors.count, "error") %> prohibited this contribution from being saved:</h2>

		<ul>
		<% @contribution.errors.full_messages.each do |msg| %>
		<li><%= msg %></li>
		<% end %>
		</ul>
	</div>
<% end %>

<div class="row">
	<div class="large-5 columns">
		<div class="field">
			<%= f.label :amount_in_dollars %><br />
			<%= f.text_field :amount_in_dollars %>
		</div>
		
		<%= f.hidden_field :project_id, :value => @project.id %>
		<%= f.hidden_field :user_id, :value => current_user.id %>
		
		<%= @project.id %>
		<%= current_user.id %>

		<div class="actions">
			<%= f.submit "submit", class: "button" %>
		</div>

	</div> <!-- end large-5 -->
</div> <!-- end row -->
<% end %>


</div>


</div>
