</div> <!-- end row -->
<div class="row">
<div class="large-5 columns">
<div class="field">
<%= f.label :title %><br />
<%= f.text_field :title %>
</div>

<div class="form_field">
<%= f.label :category_id %>
<%= f.collection_select :category_id, Category.all, :id, :category_name %>
</div>	




<div class="field">
<%= f.label :description %><br />
<%= f.text_area :description %>
</div>


<div class="field">
<%= f.label :goal_in_dollars %><br />
<%= f.text_field :goal_in_dollars %>
</div>
<div class="field">
<%= f.label :start_date %><br />
<%= f.date_field :start_date %>
</div>

<div class="field">
<%= f.label :finish_date %><br />
<%= f.date_field :finish_date %>
</div>

<div class="field">
<%= f.label :public_date %><br />
<%= f.date_field :public_date %>
</div>

<%= f.hidden_field :owner_id, :value => current_user.id %>


<div class="actions">
<%= f.submit %>
</div>
<% end %>
</div> <!-- end 5 columns -->

</div>
