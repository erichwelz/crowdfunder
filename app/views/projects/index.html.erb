
<div class="row">
	
		<% @projects.each do |project| %>
			
		<%= link_to "/projects/#{project.id}" do %>
				<div class="large-5 medium-5 small-12 columns centered panel space">
				<h4><%= project.title  %></h4>
				Total Raised: $<%= project.total_contributions %> <br> 
				 <%= truncate(project.description, length: 100) %> <br>
				Goal Date: <%= project.finish_date.strftime('%b. %e') %> <br>
				cats&tag
						<%= project.public_date.strftime('%b. %e') %>
						<%= project.owner_first_name %>
						
							</div>			
				<% end %>
			<% end %>

</div> <!-- end row -->

