<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title><%= content_for?(:title) ? yield(:title) : "CROWDFUNDER" %></title>

    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "vendor/modernizr" %>
    <%= csrf_meta_tags %>
   
  </head>






<body>
<div class="contain-to-grid">
  <nav class="top-bar" data-topbar data-mobile-show-parent-link="false">
  
    <ul class="title-area">
      <li class="name">
        <h1> <%= link_to "Crowdfunder", root_path %> </h1>
      </li>
    </ul>

    <section class="top-bar-section">
     
      <% if current_user %>
     

      <ul class="right">
        <li>  </li>
        <li class="has-dropdown">
          <%= link_to current_user.full_name, user_path(current_user) %>
          <ul class="dropdown">
            <li> <%= link_to "Logout", logout_path %> </li>
          </ul>
        </li>
      </ul>


      <% else %>
      <ul class="right">
        <li class="active">
          <%= link_to "Sign Up", new_user_path %>
        </li>
        <li>
          <%= link_to "Login", :login %>
        </li>
      </ul>
      <% end %>
    </section>
  </nav>
</div> <!-- end contain to grid -->

<div class="row">
  <div class="large-12 columns">  
    <%= yield %>
     <%= javascript_include_tag "application" %>
  </div>
</div>

<div class="row">
  <footer class="large-12 columns">
    footer
  </footer>
</div>

</body>
</html>
